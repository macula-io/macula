%% -*- mode: erlang -*-
%% Macula Bootstrap Service - Lightweight DHT bootstrap node

{erl_opts, [
    debug_info,
    warnings_as_errors,
    warn_export_vars,
    warn_unused_vars,
    warn_obsolete_guard
]}.

{deps, [
    %% Depend on macula core (parent directory)
    {macula, {path, "../../"}}
]}.

{relx, [
    {release, {macula_bootstrap, "0.1.0"}, [
        macula,           % Macula core library
        sasl,
        runtime_tools
    ]},

    {mode, prod},
    {include_erts, true},
    {extended_start_script, true},

    {sys_config, "./config/sys.config"},
    {vm_args, "./config/vm.args"},

    {overlay, [
        {mkdir, "log"},
        {copy, "../../README.md", "README.md"}
    ]}
]}.

{profiles, [
    {prod, [
        {erl_opts, [
            no_debug_info,
            deterministic
        ]},
        {relx, [
            {mode, prod},
            {dev_mode, false},
            {include_src, false}
        ]}
    ]}
]}.
